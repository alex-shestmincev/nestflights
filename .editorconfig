# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# 2 space indentation
[**.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false
quote = single

# 2 space indentation
[**.ts]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false
quote = single

[**.json]
indent_style = space
indent_size = 2

[**.yml]
indent_style = space
indent_size = 2

[**.config]
indent_style = space
indent_size = 2
